<UserControl x:Class="SEIDR.Dynamics.Configurations.DynamicEditor.ConfigurationColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SEIDR.Dynamics.Configurations.DynamicEditor"
             mc:Ignorable="d"  MinHeight="100"            
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label Name="DescriptionLabel" BorderBrush="{Binding Path=myColor}" Margin="10,0"
               BorderThickness="5,5"
               FontFamily="Times New Roman" FontSize="16">Label</Label>
        <ComboBox Name="ColorList" SelectedItem="{Binding Path=myColor}" Grid.Row="1" />
    </Grid>
</UserControl>
