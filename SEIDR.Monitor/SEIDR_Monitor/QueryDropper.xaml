<Window x:Class="DS_LoaderMonitor.QueryDropper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remove Query" Height="140" Width="300"
        Background="LightSteelBlue" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Line Height="30"></Line>
        <ComboBox Name="QueryList" Width="150">            
        </ComboBox>
        <Line Height="25"></Line>
        <StackPanel Orientation ="Horizontal">
            <Button Name="Accept" Click="Accept_Click"
                    Margin="70, 0,0,0" Width="70">
                Drop Query
            </Button>
            <Button Name="Cancel" Click="Cancel_Click"
                    Margin="20,0,0,0" Width="70">
                Cancel
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
