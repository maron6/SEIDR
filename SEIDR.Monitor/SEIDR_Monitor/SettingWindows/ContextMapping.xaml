<DS_LoaderMonitor:SessionWindow xmlns:DS_LoaderMonitor="clr-namespace:SEIDR.WindowMonitor"  
        x:Class="SEIDR.WindowMonitor.ContextMapping"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterOwner"
        Title="Context Menu Item Parameter Mapping" Height="300" Width="300" Background="LightSteelBlue"
        ResizeMode="NoResize">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Name="Accept" Width="100"  Margin="5,5" Click="Accept_Click">Accept</Button>
            <Button Name="Cancel" Width="100"  Margin="5,5" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
        <DS_LoaderMonitor:OptionListBox x:Name="ListBox" Label="DataGrid Column Name" 
                                        BoxWidth="280"
                                        DockPanel.Dock="Top"/>
    </DockPanel>
</DS_LoaderMonitor:SessionWindow>
